#!/usr/bin/env bash
test=(
    git-clean
    rvm-setup
    gem-cache-import
    bundle-install
    rspec
)
test_ensure=(
    gem-cache-rebuild
    build-status-notify
)

quality=(
    git-clean
    rvm-setup
    gem-cache-import
    bundle-install
    gem-cache-rebuild
    rubycritic
    security
)
quality_ensure=(
    gem-cache-rebuild
    reek-notify
    build-status-notify
)

package=(
    # git-clean must be called BEFORE this shell script, or else dhc won't
    # create the debian/changelog file and the build will have version 0.0
    rvm-setup
    gem-cache-import
    bundle-install-deployment
    debian-package
)
package_ensure=(
    gem-cache-rebuild
    build-status-notify
)

#
# These jobs are used for testing purposes only
#
success=(
    tests/success
    tests/success_with_no_hooks
    tests/success_because_minus_e_was_not_set
    tests/success
)
success_ensure=(
    tests/success_ensure
)
failure=(
    tests/success
    tests/failure
    tests/success
)
failure_ensure=(
    tests/failure_ensure
    tests/failure_ensure
)
